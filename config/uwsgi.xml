<uwsgi>
    <master>true</master>
    <pcre-jit>true</pcre-jit>
    <thunder-lock>true</thunder-lock>
    <enable-threads>true</enable-threads>
    <processes>2</processes>
    <uid>www-data</uid>
    <gid>www-data</gid>
    <chdir>/var/www/html/digidice/backend</chdir>
    <virtualenv>%(chdir)/.venv</virtualenv>
    <safe-pidfile>/var/run/uwsgi/uwsgi.pid</safe-pidfile>
    <socket>/var/run/uwsgi/uwsgi.sock</socket>
    <daemonize>/var/log/apache2/uwsgi.log</daemonize>
    <wsgi-file>digidice/wsgi.py</wsgi-file>
    <disable-write-exception>true</disable-write-exception>
    <log-4xx>true</log-4xx>
    <log-5xx>true</log-5xx>
</uwsgi>
